# Configuration Backend Flask API

# Clé secrète Flask (générez-en une avec: python3 -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here_change_this_in_production

# Configuration Cloudinary (pour l'upload d'images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Mot de passe administrateur (pour create_admin.py)
ADMIN_PASSWORD=your_admin_password

# Environnement
FLASK_ENV=production

# Chemin de la base de données
DATABASE_PATH=/opt/render/project/src/social_network.db
